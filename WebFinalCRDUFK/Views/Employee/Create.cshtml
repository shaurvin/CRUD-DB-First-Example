  @model WebFinalCRDUFK.Models.EmployeeViewModel


<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Employee Full Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Gender</label>
        <div>
            <input type="radio" asp-for="Gender" value="Male" /> Male
            <input type="radio" asp-for="Gender" value="Female" /> Female
        </div>
    </div>

    <div class="form-group">
        <label for="DeptId">Department Name</label>
        <select asp-for="DeptId" asp-items="Model.Departments" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Create New Employee</button>
</form>
